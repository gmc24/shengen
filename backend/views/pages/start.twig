        <div class="grid-x">

            {% if verified %}
            <div class="cell">
                    <div class="callout warning">
                        {{ verified }}
                    </div>
            </div>
            {% endif %}

            <div class="cell">
                <h1 class="text-center">Under constructionâ€¦</h1>
